{
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "$id":"https://github.com/ministryofjustice/hmpps-education-employment-api/schemas/work-readiness-schema-v1.json",
  "title":"WorkReadiness",
  "description":"Data representing an offenders readiness to re-enter the workplace",
  "definitions":{
    "note":{
      "type":"object",
      "properties":{
        "text":{
          "maxLength":200,
          "type":"string"
        },
        "createdBy":{
          "maxLength":32,
          "type":"string"
        },
        "createdDateTime":{
          "type":"string",
          "format":"date-time"
        },
        "attribute":{
          "type":"string"
        }
      },
      "required":[
        "text"
      ]
    }
  },
  "type":"object",
  "additionalProperties":false,
  "properties":{
    "modifiedBy":{
      "maxLength":32,
      "type":"string"
    },
    "modifiedDateTime":{
      "type":"string",
      "format":"date-time"
    },
    "status":{
      "type":"string",
      "enum":[
        "SUPPORT_NEEDED",
        "READY_TO_WORK",
        "SUPPORT_DECLINED",
        "NO_RIGHT_TO_WORK"
      ]
    },
    "supportDeclined":{
      "type":"object",
      "additionalProperties":false,
      "properties":{
        "modifiedBy":{
          "maxLength":32,
          "type":"string"
        },
        "modifiedDateTime":{
          "type":"string",
          "format":"date-time"
        },
        "supportToWorkDeclinedReason":{
          "description":"Why does the offender not want support?",
          "type":"array",
          "items":{
            "type":"string",
            "enum":[
              "FULL_TIME_CARER",
              "LACKS_CONFIDENCE",
              "LACKS_MOTIVATION",
              "HEALTH",
              "RETIRED",
              "RETURNING_TO_JOB",
              "SELF_EMPLOYED",
              "OTHER"
            ]
          },
          "minItems":1,
          "uniqueItems":true
        },
        "supportToWorkDeclinedReasonOther":{
          "description":"When supportToWorkDeclinedReason includes OTHER",
          "maxLength":200,
          "type":"string"
        },
        "circumstanceChangesRequiredToWork":{
          "description":"What change in circumstances would make the offender want to get work on release?",
          "type":"array",
          "items":{
            "type":"string",
            "enum":[
              "HOUSING_ON_RELEASE",
              "ID_ON_RELEASE",
              "DEPENDENCY_SUPPORT",
              "MENTAL_HEALTH_SUPPORT",
              "OTHER"
            ]
          },
          "minItems":1,
          "uniqueItems":true
        },
        "circumstanceChangesRequiredToWorkOther":{
          "description":"When circumstanceChangesRequiredToWork includes OTHER",
          "maxLength":200,
          "type":"string"
        }
      },
      "required":[
        "modifiedBy",
        "modifiedDateTime",
        "supportToWorkDeclinedReason",
        "circumstanceChangesRequiredToWork"
      ]
    },
    "supportAccepted":{
      "type":"object",
      "additionalProperties":false,
      "properties":{
        "actionsRequired":{
          "type":"object",
          "additionalProperties":false,
          "properties":{
            "modifiedBy":{
              "maxLength":32,
              "type":"string"
            },
            "modifiedDateTime":{
              "type":"string",
              "format":"date-time"
            },
            "actions":{
              "description":"What does the offender have in place already",
              "type":"array",
              "items":{
                "type":"object",
                "additionalProperties":false,
                "properties":{
                  "todoItem":{
                    "type":"string",
                    "enum":[
                      "BANK_ACCOUNT",
                      "CV_AND_COVERING_LETTER",
                      "DISCLOSURE_LETTER",
                      "EMAIL_OR_PHONE",
                      "HOUSING",
                      "ID",
                      "INTERVIEW_CLOTHING"
                    ]
                  },
                  "status":{
                    "type":"string",
                    "enum":[
                      "NOT_STARTED",
                      "IN_PROGRESS",
                      "COMPLETED"
                    ]
                  }
                },
                "minItems":1,
                "uniqueItems":true
              }
            }
          },
          "required":[
            "modifiedBy",
            "modifiedDateTime",
            "actions"
          ]
        },
        "workImpacts":{
          "type":"object",
          "additionalProperties":false,
          "properties":{
            "modifiedBy":{
              "maxLength":32,
              "type":"string"
            },
            "modifiedDateTime":{
              "type":"string",
              "format":"date-time"
            },
            "abilityToWorkImpactedBy":{
              "description":"What might impact the offender's ability to work?",
              "type":"array",
              "items":{
                "type":"string",
                "enum":[
                  "CARING_RESPONSIBILITIES",
                  "EDUCATION_ENROLLMENT",
                  "FAMILY_ISSUES",
                  "MENTAL_HEALTH_ISSUES",
                  "PHYSICAL_HEALTH_ISSUES",
                  "DEPENDENCY_ISSUES"
                ]
              },
              "minItems":1,
              "uniqueItems":true
            },
            "caringResponsibilitiesFullTime":{
              "description":"Are the offender's caring responsibilities full-time?",
              "type":"boolean"
            },
            "ableToManageMentalHealth":{
              "description":"Is the offender currently able to manage their mental health?",
              "type":"boolean"
            },
            "ableToManageDependencies":{
              "description":"Is the offender currently able to manage their drug or alcohol dependency?",
              "type":"boolean"
            }
          },
          "required":[
            "modifiedBy",
            "modifiedDateTime",
            "abilityToWorkImpactedBy",
            "caringResponsibilitiesFullTime",
            "ableToManageMentalHealth",
            "ableToManageDependencies"
          ]
        },
        "workInterests":{
          "type":"object",
          "additionalProperties":false,
          "properties":{
            "modifiedBy":{
              "maxLength":32,
              "type":"string"
            },
            "modifiedDateTime":{
              "type":"string",
              "format":"date-time"
            },
            "workTypesOfInterest":{
              "description":"What type of work is the offender interested in?",
              "type":"array",
              "items":{
                "type":"string",
                "enum":[
                  "ANY",
                  "CONSTRUCTION",
                  "DRIVING",
                  "BEAUTY",
                  "HOSPITALITY",
                  "MANUFACTURING",
                  "OFFICE",
                  "OUTDOOR",
                  "RETAIL",
                  "TECHNICAL",
                  "SPORTS",
                  "WAREHOUSING",
                  "OTHER"
                ]
              },
              "minItems":1,
              "uniqueItems":true
            },
            "workTypesOfInterestOther":{
              "description":"When workTypesOfInterest includes OTHER",
              "maxLength":200,
              "type":"string"
            },
            "jobOfParticularInterest":{
              "description":"Is the offender interested in a particular job?",
              "maxLength":200,
              "type":"string"
            }
          },
          "required":[
            "modifiedBy",
            "modifiedDateTime",
            "workTypesOfInterest"
          ]
        },
        "workExperience":{
          "type":"object",
          "additionalProperties":false,
          "properties":{
            "modifiedBy":{
              "maxLength":32,
              "type":"string"
            },
            "modifiedDateTime":{
              "type":"string",
              "format":"date-time"
            },
            "previousWorkOrVolunteering":{
              "description":"Does the offender have any previous work or volunteering experience?",
              "maxLength":200,
              "type":"string"
            },
            "qualificationsAndTraining":{
              "description":"Does the offender have any qualifications or training?",
              "type":"array",
              "items":{
                "type":"string",
                "enum":[
                  "ADVANCED_EDUCATION",
                  "CSCS",
                  "DRIVING_LICENSE",
                  "FIRST_AID",
                  "FOOD_HYGIENE",
                  "HEALTH_AND_SAFETY",
                  "HGV_LICENSE",
                  "HIGHER_EDUCATION",
                  "MACHINERY",
                  "MANUAL",
                  "TRADE",
                  "SCHOOL_EDUCATION",
                  "OTHER"
                ]
              },
              "minItems":1,
              "uniqueItems":true
            },
            "qualificationsAndTrainingOther":{
              "description":"If qualificationsAndTraining includes OTHER",
              "maxLength":200,
              "type":"string"
            }
          },
          "required":[
            "modifiedBy",
            "modifiedDateTime",
            "previousWorkOrVolunteering",
            "qualificationsAndTraining"
          ]
        }
      },
      "required":[
        "actionsRequired",
        "workImpacts",
        "workInterests",
        "workExperience"
      ]
    },
    "notes":{
      "type":"array",
      "items":{
        "$ref":"#/definitions/note"
      }
    }
  },
  "required":[
    "status",
    "modifiedBy",
    "modifiedDateTime"
  ]
}
